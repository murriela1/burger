<body>
	<body background="http://s3.amazonaws.com/spoonflower/public/design_thumbnails/0002/7185/rrburger_and_fries_spoonflower_1_shop_preview.png">
<div class ="jumbotron">
<div class = "image">
<img src="assets/img/burger.jpg" class="img-rounded" id="burger-pic" alt="Burger Image">
</div>
<br>
<h1>"Eat Da Burger!" App</h1>
</div>


<div class="container">
<div class="not-devoured">

<ol>
	{{#each burgers}}
	{{#unless this.devoured}}
	<li>
		<div class="row burger-name">
		<div class="col-xs-7 col-md-8">
			{{this.burgerName}}
			</div>
			<div class="col-xs-3 col-md-4">
			<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
			<input type="hidden" name="devoured" value="true">
			<button type="submit" class="burger-button">Time for Burger Munching!</button>
			</form>
		</div>
		</div>
	</li>
	{{/unless}}
	{{/each}}
</ol>

</div>

<div class="devoured">
  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
          <li>
            <input type="hidden" name="devoured" value="false">
            {{this.burgerName}}
          </li>
     {{/if}}
    {{/each}}
  </ol>
  </div>

</div>

<form class="create-update-form" action="burgers/create" method="POST">
  <h4>Be Creative! Add a Burger</h4>

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="burgerName">
    </div>

    <button type="submit">Add Burger</button>
</form>

</body>


